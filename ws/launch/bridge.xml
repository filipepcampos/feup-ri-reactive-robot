<launch>
    <node pkg="ros_gz_bridge" exec="parameter_bridge" name="ros_bridge">
        <param name="parameter" value="/model/vehicle_blue/cmd_vel@geometry_msgs/msg/Twist]ignition.msgs.Twist"/>
    </node>
    <node pkg="teleop_twist_keyboard" exec="teleop_twist_keyboard" name="keyboard_bridge" output="screen" launch-prefix="xterm -e">
        <remap from="/cmd_vel" to="/model/vehicle_blue/cmd_vel"/>
    </node>
    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="parameter" value="/lidar2@sensor_msgs/msg/LaserScan[ignition.msgs.LaserScan"/>
        <remap from="/lidar" to="/laser_scan"/>
    </node>
</launch>
